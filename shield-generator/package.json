{
  "name": "shield-generator",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/tejashah88/devpost-shields",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "deploy": "node ./node_modules/vue-gh-pages/index.js -b gh-pages"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "buefy": "^0.8.20",
    "get-html-title": "0.0.2",
    "is-url": "^1.2.4",
    "vue": "^2.6.11",
    "vue-clipboard2": "^0.3.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.4",
    "@vue/cli-plugin-eslint": "^4.4.4",
    "@vue/cli-service": "^4.4.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-plugin-vue": "^6.2.2",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "vue-gh-pages": "^1.19.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "require-await": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": "off",
      "no-unused-vars": "warn",
      "prefer-const": [
        "warn",
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ],
      "strict": [
        "error",
        "global"
      ],
      "no-var": "error"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
